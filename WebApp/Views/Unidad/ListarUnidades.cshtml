@using System.Web.Optimization
@using DataAccessLayer
@model List<DataAccessLayer.Modelos.Unidad>
@{
    ViewBag.Titulo = "Listado de Unidades";
    Layout = "~/Views/Shared/LogueadoLayout.cshtml";
}

@Scripts.Render("~/bundles/dataTables")
@Scripts.Render("~/bundles/sweetAlert")
@Styles.Render("~/Content/dataTables")



@if (TempData["nombreUnidad"] as string != null)
{
    if (TempData["error"] as string != null)
    {
        <script>
                Swal.fire({
                    text: 'La unidad "@TempData["nombreUnidad"]" no pudo ser creada',
                    icon: 'error',
                    confirmButtonText: 'Ok'
                })
        </script>
    }
    else
    {
        <script>
                    Swal.fire({
                        text: 'La unidad "@TempData["nombreUnidad"]" fue creada con exito',
                        icon: 'success',
                        confirmButtonText: 'Ok'
                    })
        </script>
    }

}

<div class="container mb-5">
    <div class="pb-5">
        <h2 class="mb-5">Listado de unidades</h2>
        <a class="btn btn-primary btn-default btn-agregar" href="/unidad/agregarUnidad/@ViewBag.idConsorcio">Nuevo Unidad</a>

        <table class="table table-striped table-hover" id="ListadoGeneral">
            <thead class="thead-dark">
                <tr>
                    <th>Unidad</th>
                    <th>Apellido</th>
                    <th>Nombre</th>
                    <th>Mail</th>
                    <th>Modificar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>

            @foreach (DataAccessLayer.Modelos.Unidad unidad in Model)
            {
                <tr>
                    <td>@unidad.Nombre</td>
                    <td>@unidad.ApellidoPropietario</td>
                    <td>@unidad.NombrePropietario</td>
                    <td>@unidad.EmailPropietario</td>
                    <td class="text-center"><a href="/unidad/modificarUnidad/@unidad.IdUnidad"><img src="~/Img/editar.png" /></a></td>
                    <td class="text-center"><a href="/unidad/eliminarUnidad/@unidad.IdUnidad"><img src="~/Img/borrar.png" /></a></td>
                </tr>
            }

        </table>
    </div>
</div>