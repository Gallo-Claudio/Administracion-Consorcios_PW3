@using Entidades
@model Usuario_VM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
</head>
<body>
    <div>
        @ViewBag.error
        <form action="/home/registrarse" method="post">

            @Html.TextBoxFor(n => n.Nombre, new { placeholder = "Nombre" }) @Html.ValidationMessageFor(Model => Model.Nombre)<br />
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" }) @Html.ValidationMessageFor(Model => Model.Email)<br />
            @Html.PasswordFor(p => p.Password, new { placeholder = "Contraseña" }) @Html.ValidationMessageFor(Model => Model.Password)<br />
            @Html.PasswordFor(p2 => p2.ReingresoPassword, new { placeholder = "Reingrese la contraseña" }) @Html.ValidationMessageFor(Model => Model.ReingresoPassword)<br />

            <button type="submit">Registrarse</button>
        </form>
    </div>
</body>
</html>
