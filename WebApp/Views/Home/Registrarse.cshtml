@using Entidades
@model Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
</head>
<body>
    <div>
        @ViewBag.error
        <form action="/home/registrarse" method="post">

            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })<br />
            @Html.PasswordFor(p => p.Password, new { placeholder = "Contraseña" })<br />
            @Html.PasswordFor(p2 => p2.Password, new { placeholder = "Reingrese la contraseña" })

            <button type="submit">Registrarse</button>
        </form>
    </div>
</body>
</html>
