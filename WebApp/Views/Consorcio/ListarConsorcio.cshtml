@using System.Web.Optimization
@using DataAccessLayer
@model List<DataAccessLayer.Modelos.Consorcio>
@{
    ViewBag.Titulo = "Listado de Consorcios";
    Layout = "~/Views/Shared/LogueadoLayout.cshtml";
}

@Scripts.Render("~/bundles/dataTables")
@Scripts.Render("~/bundles/sweetAlert")
@Styles.Render("~/Content/dataTables")


@Html.Partial("_PartialMensajes")

<div class="container mb-5">
    <div class="pb-5">
        <h2 class="mb-5">Listado de consorcios</h2>
        <a class="btn btn-primary btn-default btn-agregar" href="/consorcio/agregarConsorcio">Nuevo Consorcio</a>

        <table class="table table-striped table-hover" id="ListadoGeneral">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Provincia</th>
                    <th>Ciudad</th>
                    <th>Unidades</th>
                    <th>Expensas</th>
                    <th>Gastos</th>
                    <th>Modificar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            @foreach (DataAccessLayer.Modelos.Consorcio consorcio in Model)
            {
                <tr>
                    <td>@consorcio.Nombre</td>
                    <td>@consorcio.Provincia.Nombre</td>
                    <td>@consorcio.Ciudad</td>
                    <td><a href="/unidad/listarUnidades/@consorcio.IdConsorcio">Ver Unidades</a></td>
                    <td><a href="/expensa/listarExpensa/@consorcio.IdConsorcio">Ver Expensas</a></td>
                    <td><a href="/gasto/verGastos/@consorcio.IdConsorcio">Ver Gastos</a></td>
                    <td class="text-center"><a href="/consorcio/modificarConsorcio/@consorcio.IdConsorcio"><img src="~/Img/editar.png" /></a></td>
                    <td class="text-center"><a href="/consorcio/eliminarConsorcio/@consorcio.IdConsorcio"><img src="~/Img/borrar.png" /></a></td>
                </tr>
            }
        </table>
    </div>
</div>