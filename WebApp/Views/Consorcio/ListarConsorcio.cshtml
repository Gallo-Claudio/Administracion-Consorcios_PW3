@using DataAccessLayer
@model List<DataAccessLayer.Modelos.Consorcio>
@{
    ViewBag.Titulo = "Listado de Consorcios";
    Layout = "~/Views/Shared/_LayoutPageLogin.cshtml";
}

<body>
    <div class="container">
        <h1>Listado de consorcios</h1>
        <a href="/consorcio/agregarConsorcio">Nuevo Consorcio</a>

        <table class="table table-striped table-hover">            
            <thead class="thead-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Provincia</th>
                    <th>Ciudad</th>
                    <th>Unidades</th>
                    <th>Expensas</th>
                    <th>Gastos</th>
                    <th>Modificar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            @foreach (DataAccessLayer.Modelos.Consorcio consorcio in Model)
            {
                <tr>
                    <td>@consorcio.Nombre</td>
                    <td>@consorcio.Provincia.Nombre</td>
                    <td>@consorcio.Ciudad</td>
                    <td><a href="/unidad/listarUnidad/@consorcio.IdConsorcio">Ver Unidades</a></td>
                    <td><a href="/expensa/listarExpensa/@consorcio.IdConsorcio">Ver Expensas</a></td>
                    <td><a href="/gasto/listarGasto/@consorcio.IdConsorcio">Ver Gastos</a></td>
                    <td><a href="/consorcio/modificarConsorcio/@consorcio.IdConsorcio"><img src="~/Img/editar.png" /></a></td>
                    <td><a href="/consorcio/eliminarConsorcio/@consorcio.IdConsorcio"><img src="~/Img/borrar.png" /></a></td>
                </tr>
            }
        </table>
    </div>
</body>