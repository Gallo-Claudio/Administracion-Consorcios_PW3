            <input name="Ciudad" value="@Model.Ciudad" /><br /><br />

            <label>Calle *</label><br />
            <input name="Calle" value="@Model.Calle" /><br /><br />

            <label>Altura *</label><br />
            <input name="Altura" value="@Model.Altura" /><br /><br />

