            <script src="https://code.jquery.com/jquery-3.2.1.js"></script>
            <script type="text/javascript">
            $(document).ready(function () {
                $('#IdProvincia > option[value="@Model.IdProvincia.IdProvincia"]').attr('selected', 'selected');
            });
            </script>

            @Html.DropDownList("IdProvincia", new SelectList((System.Collections.IEnumerable)ViewData["listadoProvincias"], "IdProvincia", "Nombre"))

