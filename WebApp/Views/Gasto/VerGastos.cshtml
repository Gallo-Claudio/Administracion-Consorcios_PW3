@using System.Globalization;
@using System.Web.Optimization
@using DataAccessLayer.Modelos
@model List<DataAccessLayer.Modelos.Gasto>
@{
    ViewBag.Titulo = "Listado de Gastos";
    Layout = "~/Views/Shared/LogueadoLayout.cshtml";
    Consorcio consorcio = (Consorcio)ViewData["consorcio"];
}

@Scripts.Render("~/bundles/dataTables")
@Scripts.Render("~/bundles/sweetAlert")
@Styles.Render("~/Content/dataTables")


@Html.Partial("_PartialMensajes")

<div class="container mb-5">
    <div class="pb-5">
        <h2 class="mb-5">Consorcio "@consorcio.Nombre" - Gastos</h2>
        <a class="btn btn-primary btn-default btn-agregar" href="/gasto/agregarGasto/@consorcio.IdConsorcio">Nuevo Gasto</a>

        <table class="table table-striped table-hover" id="ListadoGeneral">
            <thead class="thead-dark">
                <tr>
                    <th>Año</th>
                    <th>Mes</th>
                    <th>Nombre</th>
                    <th>Tipo Gasto</th>
                    <th>Fecha</th>
                    <th>Monto($)</th>
                    <th>Comprobante</th>
                    <th>Modificar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            @foreach (DataAccessLayer.Modelos.Gasto gasto in Model)
            {
                string filename = gasto.ArchivoComprobante.Replace("/Gastos/", "");
                <tr>
                    <td>@gasto.AnioExpensa</td>
                    <td>@gasto.MesExpensa</td>
                    <td>@gasto.Nombre</td>
                    <td>@gasto.TipoGasto.Nombre</td>
                    <td>@gasto.FechaGasto.ToString("dd/MM/yyyy", CultureInfo.CreateSpecificCulture("es-ES"))</td>
                    <td>$@gasto.Monto</td>
                    <td class="text-center">@Html.ActionLink("Descargar", "Download", new { file = filename })</td>
                    <td class="text-center"><a href="/gasto/modificarGasto/@gasto.IdGasto"><img src="~/Img/editar.png" /></a></td>
                    <td class="text-center"><a href="/gasto/eliminarGasto/@gasto.IdGasto"><img src="~/Img/borrar.png" /></a></td>
                </tr>
            }
        </table>
    </div>
</div>